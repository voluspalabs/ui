{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strict */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    /* If transpiling with TypeScript: */
    // "module": "Preserve", Testing now...
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true, // Set to false if you want to compile to JS
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    // "rootDir": "src", // Using tsup
    // "outDir": "dist", // Using tsup
    // "sourceMap": true, // Using tsup

    /* Lib */
    "jsx": "react-jsx"
    // "declaration": true, // Using tsup
    // "declarationMap": true // Using tsup
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
